<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.helpshift.HSPhoneGapPlugin" version="4.7.0">

    <name>Helpshift</name>
    <description>Helpshift PhoneGap Plugin</description>
    <keywords>phonegap,helpshift,help,support</keywords>

    <asset src="www/js/helpshiftpg.js" target="js/helpshiftpg.js" />

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/widget/plugins">
            <feature name="HelpshiftPG">
                <param name="ios-package" value="HelpshiftPG"/>
            </feature>
        </config-file>
        <header-file src="src/ios/HelpshiftPG.h" />
        <source-file src="src/ios/HelpshiftPG.m" />
    </platform>

</plugin>
